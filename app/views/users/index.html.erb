<% provide :title, t("admin.allusers") %>
<h1><%= t "admin.allusers" %></h1>
<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= gravatar_for user %>
      <%= link_to user.name, "#" %>
      <% if current_user.admin? %>
        <%= link_to t("admin.delete"), admin_user_path(user), method: :delete,
          data: {confirm: t("admin.call")}, class: "btn btn-lg btn-primary" %>
      <% end %>
    </li></br>
  <% end %>
</ul>
<%= will_paginate @users %>
