<% provide :title, t("views.words.index.wordslist") %>
<h1><%= t("views.words.index.wordslist") %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_tag words_path, method: :get do %>
      <div class="row">
        <div class="col-md-6">
          <%= select_tag :category_id,
            options_from_collection_for_select(@categories, :id, :name),
            include_blank: t("views.words.index.filterall"), class: "form-control" %>
        </div>
        <div>
          <% Settings.filter_options.each do |option| %>
            <label>
              <%= radio_button_tag :filter_type, option,
                checked: params[:filter_type] == option, class: "radio-inline" %>
              <%= t "#{option}" %>
            </label>
          <% end %>
        </div>
      </div>
      <%= submit_tag t("views.words.index.filter"), class: "form-control" %>
    <% end %>
  </div>
</div>
  <div class="row">
    <ol class="words">
      <% @words.each do |word| %>
        <li>
          <%= word.content %>
        </li>
      <% end %>
    </ol>
  </div>
<%= will_paginate @words %>
