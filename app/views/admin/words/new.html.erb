<% provide:title, t("admin.addword") %>
<h1><%= t "admin.addword" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for [:admin,:category, @word] do |f| %>
      <%= f.label :content, t("admin.word") %>
      <%= f.text_field :content %>
      <%= link_to_add_fields t("admin.addanswer"), f, :word_answers %>
      <%= f.fields_for :word_answers do |builder| %>
        <%= render "word_answer_fields", f: builder %>
      <% end %>
      <div class="new_answer">
      </div>
      <%= f.submit t("admin.add"), class: "btn btn-lg btn-primary" %>
    <% end %>
  </div>
</div>
